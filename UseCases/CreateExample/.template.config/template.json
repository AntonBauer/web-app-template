{
  "$schema": "http://json.schemastore.org/template",
  "identity": "Abauer.UseCaseTemplate.CSharp",
  "name": "Use Case Template",
  "shortName": "usecase",
  "author": "Anton Bauer",
  "classifications": [
    "Common",
    "Use Case"
  ],
  "tags": {
    "language": "C#",
    "type": "item"
  },
  "sourceName": "CreateExample",
  "sources": [
    {
      "source": "./",
      "target": "./",
      "exclude": [
        "**/[Bb]in/**",
        "**/[Oo]bj/**",
        ".template.config/**/*",
        "**/*.filelist",
        "**/*.user",
        "**/*.lock.json",
        "**/UseCaseTemplate.csproj"
      ]
    }
  ],
  "symbols": {
    "dbCtxName": {
      "type": "parameter",
      "description": "DB Context Name",
      "dataType": "string",
      "isRequired": true,
      "replaces": "ExampleContext"
    },
    "rootNamespace": {
      "type": "parameter",
      "description": "Root Namespace",
      "dataType": "string",
      "isRequired": true,
      "replaces": "Template"
    }
  }
}